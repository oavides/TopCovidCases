@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-md-4">
        <select id="region" class="form-control">
        </select>
    </div>
    <div class="col-md-4">
        <button type="button" id="btnReport" class="btn btn-primary">Report</button>
    </div>
    <div class="col-md-4 d-flex flex-row-reverse">
        <div class="btn-group" role="group" aria-label="Export">
            <button type="button" id="btnExportXML" class="btn btn-light">XML</button>
            <button type="button" id="btnExportJSON" class="btn btn-light">JSON</button>
            <button type="button" id="btnExportCSV" class="btn btn-light">CSV</button>
        </div>
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-12">
        <div class="table-responsive">
            <table id="covidCasesTable" class="table table-striped table-bordered nowrap" style="width:100%">
                <thead>
                    <tr>
                        <th>REGION</th>
                        <th>CASES</th>
                        <th>DEATHS</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/Covid.js" asp-append-version="true"></script>